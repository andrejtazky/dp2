<h1>     Prihlásenie</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Prihlásenie" %>
  </div>
<% end %>

<p>Nový používateľ? <%= link_to "Registrácia!", signup_path %></p>